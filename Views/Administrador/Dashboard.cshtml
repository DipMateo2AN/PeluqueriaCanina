@{
    ViewData["Title"] = "Dashboard Administrador";
}

<div class="container mt-4 fade-in">
    <!-- Encabezado de Bienvenida -->
    <div class="card mb-4 border-0 bg-gradient-primary text-white">
        <div class="card-body p-4">
            <div class="d-flex align-items-center">
                <div class="flex-grow-1">
                    <h2 class="mb-1">Panel de Administración 🔧</h2>
                    <p class="mb-0 opacity-75">Gestiona tu peluquería canina de forma eficiente</p>
                </div>
                <div class="d-none d-md-block">
                    <i class="bi bi-shield-check" style="font-size: 4rem; opacity: 0.3;"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Métricas Rápidas -->
    <div class="row g-4 mb-4">
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-md-custom bg-gradient-primary text-white">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="text-uppercase mb-1 opacity-75">Peluqueros</h6>
                            <h2 class="mb-0">-</h2>
                        </div>
                        <div>
                            <i class="bi bi-people" style="font-size: 3rem; opacity: 0.5;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-md-custom bg-gradient-success text-white">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="text-uppercase mb-1 opacity-75">Servicios</h6>
                            <h2 class="mb-0">-</h2>
                        </div>
                        <div>
                            <i class="bi bi-gear" style="font-size: 3rem; opacity: 0.5;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-md-custom bg-gradient-warning text-white">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="text-uppercase mb-1 opacity-75">Turnos Hoy</h6>
                            <h2 class="mb-0">-</h2>
                        </div>
                        <div>
                            <i class="bi bi-calendar-day" style="font-size: 3rem; opacity: 0.5;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-md-custom bg-gradient-info text-white">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="text-uppercase mb-1 opacity-75">Clientes</h6>
                            <h2 class="mb-0">-</h2>
                        </div>
                        <div>
                            <i class="bi bi-person-check" style="font-size: 3rem; opacity: 0.5;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Acciones Principales -->
    <div class="row g-4 mb-4">
        <div class="col-md-6 col-lg-3">
            <div class="card h-100 border-0 shadow-md-custom">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="bi bi-people-fill text-primary" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title mb-2">Peluqueros</h5>
                    <p class="card-text text-muted small mb-3">Gestiona el equipo de peluqueros</p>
                    <a asp-action="ListarPeluqueros" class="btn btn-primary w-100">
                        <i class="bi bi-arrow-right-circle me-2"></i>Gestionar
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card h-100 border-0 shadow-md-custom">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="bi bi-gear-fill text-success" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title mb-2">Servicios</h5>
                    <p class="card-text text-muted small mb-3">Administra los servicios ofrecidos</p>
                    <a asp-controller="Servicio" asp-action="Index" class="btn btn-success w-100">
                        <i class="bi bi-arrow-right-circle me-2"></i>Gestionar
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card h-100 border-0 shadow-md-custom">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="bi bi-graph-up-arrow text-info" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title mb-2">Reportes</h5>
                    <p class="card-text text-muted small mb-3">Visualiza estadísticas y reportes</p>
                    <a asp-action="Reportes" class="btn btn-info w-100">
                        <i class="bi bi-arrow-right-circle me-2"></i>Ver Reportes
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card h-100 border-0 shadow-md-custom">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="bi bi-person-plus-fill text-warning" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title mb-2">Registrar Peluquero</h5>
                    <p class="card-text text-muted small mb-3">Agrega un nuevo peluquero</p>
                    <a asp-action="RegistrarPeluquero" class="btn btn-warning w-100">
                        <i class="bi bi-arrow-right-circle me-2"></i>Registrar
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Información del Sistema -->
    <div class="row g-4">
        <div class="col-lg-6">
            <div class="card border-0 shadow-md-custom h-100">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-list-check me-2"></i>Tareas Pendientes</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info mb-3">
                        <i class="bi bi-info-circle me-2"></i>
                        <strong>Recordatorio:</strong> Revisa los turnos pendientes de confirmación
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex align-items-center">
                            <i class="bi bi-circle-fill text-primary me-3" style="font-size: 0.5rem;"></i>
                            Revisar disponibilidad de peluqueros
                        </li>
                        <li class="list-group-item d-flex align-items-center">
                            <i class="bi bi-circle-fill text-success me-3" style="font-size: 0.5rem;"></i>
                            Actualizar precios de servicios
                        </li>
                        <li class="list-group-item d-flex align-items-center">
                            <i class="bi bi-circle-fill text-warning me-3" style="font-size: 0.5rem;"></i>
                            Verificar horarios laborales
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card border-0 shadow-md-custom h-100">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-trophy me-2"></i>Mejores Prácticas</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-3 d-flex">
                            <i class="bi bi-check-circle-fill text-success me-2 mt-1"></i>
                            <span>Mantén actualizada la información de los peluqueros y sus horarios</span>
                        </li>
                        <li class="mb-3 d-flex">
                            <i class="bi bi-check-circle-fill text-success me-2 mt-1"></i>
                            <span>Revisa los reportes semanalmente para identificar tendencias</span>
                        </li>
                        <li class="mb-3 d-flex">
                            <i class="bi bi-check-circle-fill text-success me-2 mt-1"></i>
                            <span>Configura los servicios con precios competitivos</span>
                        </li>
                        <li class="d-flex">
                            <i class="bi bi-check-circle-fill text-success me-2 mt-1"></i>
                            <span>Verifica la calidad del servicio regularmente</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
