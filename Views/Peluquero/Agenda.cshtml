@{
    ViewData["Title"] = "Mi Agenda";
}

<div class="container mt-4 fade-in">
    <!-- Encabezado -->
    <div class="card mb-4 border-0 bg-gradient-primary text-white">
        <div class="card-body p-4">
            <div class="d-flex align-items-center">
                <div class="flex-grow-1">
                    <h2 class="mb-1">Mi Agenda de Turnos 📅</h2>
                    <p class="mb-0 opacity-75">Gestiona tus turnos y actualiza su estado</p>
                </div>
                <div class="d-none d-md-block">
                    <i class="bi bi-calendar3" style="font-size: 4rem; opacity: 0.3;"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Instrucciones -->
    <div class="alert alert-info mb-4">
        <i class="bi bi-info-circle me-2"></i>
        <strong>Instrucciones:</strong> Hacé clic en un turno para cambiar su estado (Confirmar, Completar o Cancelar)
    </div>

    <!-- Calendario -->
    <div class="card border-0 shadow-md-custom">
        <div class="card-header bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-calendar-week me-2"></i>Calendario de Turnos</h5>
                <span id="estadoSeleccionado" class="badge bg-primary"></span>
            </div>
        </div>
        <div class="card-body p-4">
            <div id="calendar"></div>
        </div>
    </div>

    <!-- Leyenda de Estados -->
    <div class="card mt-4 border-0 shadow-md-custom">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="bi bi-palette me-2"></i>Leyenda de Estados</h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-3 col-6">
                    <div class="d-flex align-items-center">
                        <span class="badge bg-warning text-dark me-2" style="width: 20px; height: 20px;"></span>
                        <span>Pendiente</span>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="d-flex align-items-center">
                        <span class="badge bg-success me-2" style="width: 20px; height: 20px;"></span>
                        <span>Confirmado</span>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="d-flex align-items-center">
                        <span class="badge bg-info me-2" style="width: 20px; height: 20px;"></span>
                        <span>Completado</span>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="d-flex align-items-center">
                        <span class="badge bg-danger me-2" style="width: 20px; height: 20px;"></span>
                        <span>Cancelado</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.9/index.global.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const calendarEl = document.getElementById('calendar');
            const calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'timeGridWeek',
                locale: 'es',
                slotDuration: '00:30:00',
                allDaySlot: false,
                nowIndicator: true,
                height: "auto",

                events: '@Url.Action("GetTurnos", "Peluquero")',

                eventClick: function (info) {
                    const turnoId = info.event.id;
                    const estadoActual = info.event.extendedProps.estado;

                    Swal.fire({
                        title: `Turno: ${info.event.title}`,
                        html: `
                            <p><b>Estado actual:</b> ${estadoActual}</p>
                            <p>¿Qué acción desea realizar?</p>
                        `,
                        showCancelButton: true,
                        showDenyButton: true,
                        confirmButtonText: '✅ Completar',
                        denyButtonText: '📅 Confirmar',
                        cancelButtonText: '❌ Cancelar',
                    }).then((result) => {
                        let nuevoEstado = null;
                        if (result.isConfirmed) nuevoEstado = "Completado";
                        else if (result.isDenied) nuevoEstado = "Confirmado";
                        else if (result.dismiss === Swal.DismissReason.cancel) nuevoEstado = "Cancelado";

                        if (nuevoEstado) {
                            $.post('@Url.Action("CambiarEstado", "Peluquero")', { turnoId: turnoId, nuevoEstado: nuevoEstado })
                                .done(() => {
                                    Swal.fire({
                                        icon: "success",
                                        title: `Estado cambiado a ${nuevoEstado}`,
                                        timer: 1500,
                                        showConfirmButton: false
                                    });
                                    calendar.refetchEvents();
                                })
                                .fail(() => {
                                    Swal.fire({
                                        icon: "error",
                                        title: "Error al actualizar el estado"
                                    });
                                });
                        }
                    });
                }
            });

            calendar.render();
        });
    </script>
}
